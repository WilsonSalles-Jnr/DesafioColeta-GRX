
@{
    ViewBag.Title = "Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron text-center">
    <h1>Formulario</h1>
    <form id="formulario">
        <p>Você se considera bom em lógica?</p>
        <label for="logica" class="btn btn-primary">
            <input type="radio" name="logica" id="logica" value="Sim" checked />
            Sim
        </label>
        <label for="logica-nao" class="btn btn-primary">
            <input type="radio" name="logica" id="logica-nao" value="Não" />
            Não
        </label>
        <p>Gosta de aprender com desafios?</p>
        <label for="desafio" class="btn btn-primary">
            <input type="radio" name="desafio" id="desafio" value="Sim" checked />
            Sim
        </label>
        <label for="desafio-nao" class="btn btn-primary">
            <input type="radio" name="desafio" id="desafio-nao" value="Não" />
            Não
        </label>
        <p>Gostaria de fazer parte da GRX?</p>
        <select class="btn btn-primary form-control" name="joinGRX" id="joinGRX">
            <option value="Sim" selected>Sim</option>
            <option value="Não">Não</option>
            <option value="Não sei">Não sei</option>
            <option value="Agora">Agora!</option>
        </select>
        <p>Por favor, justifique a resposta anterior</p>
        <div class="text-box">
            <textarea id="text" maxlength="200" rows="5" placeholder="mínimo 15 caracteres máximo 200" name="justificativa"></textarea>
            <span class="counter bg-red" id="contador">0/200</span>
        </div>
        <br />
        <br />
        <input id="submit" type="submit" value="enviar" class="btn btn-success form-control" disabled />
    </form>
</div>
<hr />
<div class="resultadoTodos" id="resultadoAtual">
    <h1>Ultimo resultado:</h1>
    <p class="resultadoTotal" id="qtdPositiva">Positiva: 0</p>
    <p class="resultadoTotal" id="qtdNegativa">Negativa: 0</p>
    <p class="resultadoTotal" id="qtdNaoAvaliativa">Não avaliativa: 0</p>
</div>
<div class="resultadoTodos" id="resultadoTodos">
    <h1>Total:</h1>
    <p class="resultadoTotal" id="intTotal">10</p>
    <div class="resultLine">
        <div class="resultBox">
            <p>Quantidade Positiva</p>
            <p id="intPositiva">7</p>
        </div>
        <div class="resultBox">
            <p>% Positiva</p>
            <p id="positivaPorCem">70%</p>
        </div>
    </div>
    <div class="resultLine">
        <div class="resultBox">
            <p>Quantidade Negativa</p>
            <p id="intNegativa">2</p>
        </div>
        <div class="resultBox">
            <p>% Negativa</p>
            <p id="negativaPorCem">20%</p>
        </div>
    </div>
    <div class="resultLine">
        <div class="resultBox">
            <p>Quantidade Não Avaliada</p>
            <p id="intNaoAvaliativa">1</p>
        </div>
        <div class="resultBox">
            <p>% Não Avaliada</p>
            <p id="naoAvaliativaPorCem">10%</p>
        </div>
    </div>
</div>
